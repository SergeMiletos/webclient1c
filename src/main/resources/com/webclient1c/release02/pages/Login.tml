<html t:type="layout" title="Login | release02"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">

<div class="row justify-content-md-center">
    <div class="d-flex col-3 justify-content-center">
        <t:form t:id="loginForm">
            <h2>Your login and password:</h2>
            <div class="mb-3 w-100">
                <label t:type="label" for="user1cinput">User name</label>
                <t:textfield t:id="user1cinput" class="form-control" validate="required" placeholder="User name"/>
            </div>
            <div class="mb-3 w-100">
                <label t:type="label" for="password">Password</label>
                <t:passwordfield t:id="password" class="form-control" validate="required" placeholder="Password"/>
            </div>
            <div class="mb-3">
                <t:submit class="btn btn-primary btn-large" value="Sign in"/>
            </div>
        </t:form>
    </div>
</div>

</html>
